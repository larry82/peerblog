<%= simple_form_for(@quiz) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label:"標題" %>
    <%= f.input :subtitle, label:"副標" %>
    <%= f.input :introduction, label:"說明" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "新增" %>
  </div>
<% end %>
