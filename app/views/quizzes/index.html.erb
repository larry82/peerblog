<p id="notice"><%= notice %></p>

<h1>所有測驗</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>標題</th>
      <th>副標</th>
      <th>說明</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.title %></td>
        <td><%= quiz.subtitle %></td>
        <td><%= quiz.introduction %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新增測驗', new_quiz_path,class:"btn btn-success" %>
<%= link_to '新增題目', new_question_path,class:"btn btn-info" %>
