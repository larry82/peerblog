<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :quiz %>
    <%= f.input :number %>
    <%= f.input :content %>
    <%= f.input :options %>
    <%= f.input :introduction %>
    <%= f.input :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
