<% @head_title = "我的孩子在SQ小測驗中獲得："+@result_category %>
<div class="row">
	<div class="col-md-12 text-center">
		<h1> <%= @result_score %> </h1>
		<h2> <%= @result_category %> </h2>
	</div>
	<div class="content col-md-6 col-md-offset-3">
		<p> 
			<%= @result_content.html_safe %>
			<a href="http://peerblog.online" class="font-green"  target="_blank" >Peer 輔導資訊部落格</a>
		</p>
	</div>
	<div class="col-md-8 col-md-offset-2">
		<%= simple_form_for(@quiz_result) do |f| %>
			<%= f.error_notification %>

			<div class="form-inputs col-md-8 col-md-offset-2">
				<%= f.input :email,label:"若想瞭解更詳細的分析，請留下您的信箱：" %>
			</div>

			<div class="form-actions col-md-12 text-center">
				<%= f.button :submit,"確認",type:"update_email" %>
			</div>
			<div class="col-md-12 text-center" style="margin-top: 50px;">
				<%= social_share_button_tag( @lol, :url => request.original_url, :image => "http://peerblog.online/wp-content/uploads/2016/08/leadership.jpg") %>
				<div class="share">
					分享
				</div>
			</div>
		<% end %>
	</div>
</div>
