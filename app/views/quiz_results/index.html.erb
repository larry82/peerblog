<p id="notice"><%= notice %></p>

<h1>Listing Quiz Results</h1>

<table class="table table-hover" >
  <thead>
    <tr>
      <th>測驗標題</th>
      <th>測驗時間</th>
      <th>分數</th>
      <th>填答數</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quiz_results.each do |quiz_result| %>
      <tr>
        <td><%= quiz_result.quiz.title %></td>
        <td><%= quiz_result.created_at.localtime.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= quiz_result.scores %></td>
        <td><%= quiz_result.answers.count %></td>
        <td><%= quiz_result.email %></td>
        <td><%= link_to 'Show', quiz_result %></td>
        <td><%= link_to 'Edit', edit_quiz_result_path(quiz_result) %></td>
        <td><%= link_to 'Destroy', quiz_result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

